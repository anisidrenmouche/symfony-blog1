{% extends 'base.html.twig' %}

{% block body %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

<article>
    <h2>{{ article.title }}</h2>

    <div class="metadata">Ecrit le {{ article.createdAt | date ('d/m/Y') }} à {{ article.createdAt | date ('H:i')}}
        dans la catégorie {{ article.category.title }}
    </div>
    <div class="content"></div>
    <img src="{{ article.image }}" height="360" width="570">
    {{ article.content | raw }}
    <h1>Palm d'une ile</h1>
    <p>Si vous etes a la recherche d'une maison grande comme never ici vous allez trouver votre bonheur  </p>
    <hr>


    </article>
    <section id="commentaires">
        {% for comment in article.comments %}
        <div class="comment">
            <div class="row">
                <div class="clo-3">
                    {{ comment.author }}(<small>{{ comment.createdAt | date ('d/m/Y à H:i') }}</small>
            </div>
                <div class="col">
                    {{ comment.content | raw }}
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
{% endblock %}